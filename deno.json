{
  "name": "@simtricity/informdirect",
  "version": "0.1.0",
  "license": "MIT",
  "exports": "./mod.ts",
  "publish": {
    "exclude": ["tests/", "cli/", "examples/", ".env.example", ".github/", "CLAUDE.md", "INFORMDIRECT_SANDBOX_TESTING.md"]
  },
  "tasks": {
    "cli": "deno run --allow-net --allow-env --allow-read cli/mod.ts",
    "test:prod": "deno test --allow-net --allow-env --allow-read tests/safe-test.ts",
    "test:sandbox": "deno test --allow-net --allow-env --allow-read tests/sandbox-test.ts",
    "check": "deno check mod.ts cli/mod.ts tests/sandbox-test.ts tests/safe-test.ts tests/unit-test.ts examples/read-only.ts examples/raw-fetch.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.19",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.6",
    "@std/dotenv/load": "jsr:@std/dotenv@0.225.6/load",
    "@std/cli": "jsr:@std/cli@^1.0.17",
    "@std/cli/parse-args": "jsr:@std/cli@1.0.17/parse-args"
  }
}
